<p id="notice"></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
          <h7>Name</h7><br>
            <%= f.text_field :name %><br>
          <h7>Image</h7><br>
          <h7>Introduction</h7><br>
             <%= f.text_area :introduction %><br>
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>